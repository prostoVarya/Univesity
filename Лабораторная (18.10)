using System;

namespace program
{
    class zadanie2
    {
        static void Main()
        {  
            int a, a1;
            int b=0;
            int c, count=0;
            do
            {
                a=Convert.ToInt32(Console.ReadLine());
                a1=a;
                while(a1!=0)
                {
                    c=a1%10;
                    a1=a1/10;
                    if(c%2==0)
                    {
                        b=b*10+c;
                        count++;
                    }
                }
                if(count==0)
                {
                    Console.WriteLine("Нет четных цифр");
                }
                else
                {
                    Console.WriteLine(b);
                }
                b=0;
                count=0;
                c=0;
            } 
            while(a>0);
        }
    }
}
     
